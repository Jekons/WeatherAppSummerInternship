@model IEnumerable<WeatherApp.Database.Entity.City>

@{
    ViewBag.Title = "Weather info";
}

<h2>Weather information</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Humidity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pressure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weather)
        </th>
        <th></th>
    </tr>

    @foreach (WeatherApp.Database.Entity.City item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Humidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pressure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weather)
            </td>
        </tr>
    }
</table>
